<script>
// Typing Effect
const text=["Digital Marketer","Freelancer","Content Creator","Web Designer"];
let count=0,index=0;
(function type(){
 if(count===text.length)count=0;
 let current=text[count];
 document.getElementById("typing").innerText=current.slice(0,++index);
 if(index===current.length){count++;index=0;setTimeout(type,1500);}
 else setTimeout(type,120);
})();

// Scroll Animation
const sections=document.querySelectorAll("section");
window.addEventListener("scroll",()=>{
 sections.forEach(sec=>{
  if(sec.getBoundingClientRect().top<window.innerHeight-100){
    sec.classList.add("show");
  }
 });
});
</script>

